<h1><%= current_user.email %>'s links</h1>
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Links Index</title>
    <body background="http://215marketinghouse.com/wp-content/uploads/2015/05/Simple-Grey-Background.jpg">
  </head>
  <body>
    <div class="container">
      <div class="row">
        <form class="col s12 offset-s1">
          <h5>Save a link</h5>
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">star_rate</i>
              <label for="icon_prefix">Title</label>
              <input class="form-control" id="link-title" type="text" length="20" class="validate">
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">comment</i>
              <label for="star_rate">Link</label>
              <textarea id="link-url" class="materialize-textarea" length="75"></textarea>
              <a class="btn-floating btn-large waves-effect waves-light red" id="create-link" value="Submit Link"><i class="material-icons">add</i></a>
            </div>
          </div>
        </form>
      </div>
    </div>

    <div class="links-list">

    </div>



  </body>
</html>
